{
  "manifest_version": 3,
  "name": "Teacher Poly Extension",
  "version": "1.0",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://gv.poly.edu.vn/teacher/my_class/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://gv.poly.edu.vn/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "./images/icon128.png",
    "18": "./images/icon128.png",
    "32": "./images/icon128.png",
    "128": "./images/icon128.png"
  }
}
